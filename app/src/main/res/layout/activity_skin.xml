<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Skin"
    android:background="@drawable/wallpaper">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="right">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:navigationIcon="@drawable/back"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_scrollFlags="scroll|enterAlways" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skins"
                    android:textSize="18dp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/lemon"
                    android:layout_marginLeft="80dp"></TextView>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:id="@+id/collectionone">
            <ImageView
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/luxeskins"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luxe Collection"
                    android:textSize="19sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/simpple"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="6dp"
                    android:layout_height="wrap_content"
                    android:text="Price: 4375 Valorant Points"
                    android:textColor="#FFF"></TextView>
            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:id="@+id/collectiontwo">
            <ImageView
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/prism"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prism Collection"
                    android:textSize="19sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/simpple"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="6dp"
                    android:layout_height="wrap_content"
                    android:text="Price: 6375 Valorant Points"
                    android:textColor="#FFF"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:id="@+id/collectionthree">
            <ImageView
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/reaver"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reaver Collection"
                    android:textSize="19sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/simpple"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="6dp"
                    android:layout_height="wrap_content"
                    android:text="Price: 5325 Valorant Points"
                    android:textColor="#FFF"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:id="@+id/collectionfour">
            <ImageView
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/prime"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/simpple"
                    android:text="Prime Collection"
                    android:textColor="#FFF"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="6dp"
                    android:layout_height="wrap_content"
                    android:text="Price: 7100 Valorant Points"
                    android:textColor="#FFF"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:id="@+id/collectionfive">
            <ImageView
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"

                android:adjustViewBounds="true"
                android:src="@drawable/aristoc"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aristocrat  Collection"
                    android:textSize="19sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/simpple"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="6dp"
                    android:layout_height="wrap_content"
                    android:text="Price: Currently Unknown"
                    android:textColor="#FFF"></TextView>
            </LinearLayout>
        </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>





</androidx.coordinatorlayout.widget.CoordinatorLayout>