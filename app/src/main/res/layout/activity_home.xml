<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/home"
    android:theme="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@drawable/hometext"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            >
            <RelativeLayout
                android:id="@+id/goguide"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/homestyle"
                android:layout_margin="10dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guide"
                    android:textSize="24sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/azonix"
                    android:padding="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:src="@drawable/manual"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="6dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            >
            <RelativeLayout
                android:id="@+id/gopatch"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/homestyle"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patch NOTES"
                    android:textSize="24sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/azonix"
                    android:padding="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:src="@drawable/patchnotes"
                android:layout_marginTop="-12dp"
                android:layout_marginLeft="6dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/homestyle"
                android:layout_margin="10dp"
                android:id="@+id/skin"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skins"
                    android:textSize="24sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/azonix"
                    android:padding="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:src="@drawable/myskin"
                android:layout_marginRight="7dp"
                android:layout_marginTop="-55dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/homestyle"
                android:layout_margin="10dp"
                android:id="@+id/wallpaper"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WallPapers"
                    android:textSize="24sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/azonix"
                    android:padding="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/razesec"
                android:layout_marginRight="7dp"
                android:layout_marginTop="-3dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>



</ScrollView>