<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agents.Viper"
    android:orientation="vertical"
    android:background="@drawable/gradientone"
    android:paddingBottom="30dp">

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vipersec"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"
                    ></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="6dp"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VIPER"
                            android:textColor="#FFF"
                            android:textSize="45sp"
                            android:gravity="center"
                            android:fontFamily="@font/fire"
                            ></TextView>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Voiced by: "
                                android:textColor="#FFF"
                                android:fontFamily="@font/lemon"
                                android:textSize="11dp"
                                ></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ashly Burch"
                                android:textColor="#ffff"
                                android:fontFamily="@font/lemon"
                                android:textSize="11dp"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Origin      : "
                                android:textColor="#FFF"
                                android:layout_marginLeft="2dp"
                                android:fontFamily="@font/lemon"
                                android:textSize="11dp"
                                ></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="U.States"
                                android:textColor="#ffff"
                                android:fontFamily="@font/lemon"
                                android:textSize="11dp"
                                ></TextView>
                            <ImageView
                                android:layout_marginLeft="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/us"></ImageView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Type          : "
                                android:textColor="#FFF"
                                android:layout_marginLeft="2dp"
                                android:fontFamily="@font/lemon"
                                android:textSize="11dp"
                                ></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Cotroller"
                                android:textColor="#ffff"
                                android:fontFamily="@font/lemon"
                                android:textSize="11dp"
                                ></TextView>
                            <ImageView
                                android:layout_marginLeft="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/controller"></ImageView>

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abilities"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/gradientone"
                android:layout_margin="@dimen/cardview_default_radius"
                android:fontFamily="@font/unibold"
                android:textSize="50dp">

            </TextView>
            /* Abilities */

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradienttwo"
                    android:layout_marginBottom="4dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/snakebite"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="4dp"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Snake Bite"
                                android:textColor="#FFF"
                                android:textSize="23dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/simpple"></TextView>
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_play_circle_filled_black_24dp"
                                android:background="#0000"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/snakebite"
                                ></ImageButton>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cost: "
                                android:textStyle="bold"
                                android:fontFamily="@font/sim"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100 Credits"
                                android:fontFamily="@font/azonix"
                                android:textSize="14dp"
                                android:textColor="#FFFFFF">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/snakebite"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradienttwo"
                    android:layout_marginBottom="4dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/poisoncloud"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="4dp"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Poison Cloud"
                                android:textColor="#FFF"
                                android:textSize="23dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/simpple"></TextView>
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_play_circle_filled_black_24dp"
                                android:background="#0000"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/poisoncloud"
                                ></ImageButton>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cost: "
                                android:textStyle="bold"
                                android:fontFamily="@font/sim"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200 Credits"
                                android:fontFamily="@font/azonix"
                                android:textSize="14dp"
                                android:textColor="#FFFFFF">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/poisoncloud"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradienttwo"
                    android:layout_marginBottom="4dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/toxicscreen"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="4dp"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Toxic Screen"
                                android:textColor="#FFF"
                                android:textSize="23dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/simpple"></TextView>
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_play_circle_filled_black_24dp"
                                android:background="#0000"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/toxicscreen"
                                ></ImageButton>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cost: "
                                android:textStyle="bold"
                                android:fontFamily="@font/sim"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Free"
                                android:fontFamily="@font/azonix"
                                android:textSize="14dp"
                                android:textColor="#FFFFFF">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/toxicscreen"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradienttwo"
                    android:layout_marginBottom="4dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/viperspit"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="4dp"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Viperâ€™s Pit"
                                android:textColor="#FFF"
                                android:textSize="23dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/simpple"></TextView>
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_play_circle_filled_black_24dp"
                                android:background="#0000"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/viperspit"
                                ></ImageButton>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cost: "
                                android:textStyle="bold"
                                android:fontFamily="@font/sim"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7 Points"
                                android:fontFamily="@font/azonix"
                                android:textSize="14dp"
                                android:textColor="#FFFFFF">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/viperspit"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>